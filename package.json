  "author": "Vesper Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lsj5031/vesper"
  },
  "homepage": "https://github.com/lsj5031/vesper",
  "keywords": [
    "rss",
    "reader",
    "offline",
    "pwa",
    "svelte",
    "sveltekit",
    "indexeddb",
    "dexie"
  ],
  "private": false,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
